@model Producto
@{
    ViewData["Title"] = "Visualizar Productos";
}
<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input asp-for="Nombre" class="form-control" disabled>
    </div>
    <div class="mb-3">
        <label class="form-label">Descripción</label>
        <input asp-for="Descripcion" class="form-control" disabled>
    </div>
    <div class="mb-3">
        <label class="form-label">Cantidad</label>
        <input asp-for="Cantidad" class="form-control" disabled>
    </div>
    <div class="col-6">
         <a asp-action="Index" type="submit" class="btn btn-outline-primary">Regresar</a>
    </div>

</form>

<p>En esta página se miran los productos.</p>
