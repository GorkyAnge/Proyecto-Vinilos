@model List<Resena>
@{
    ViewData["Title"] = "Reseñas de este Vinilo";
    Layout = "_LayoutAdmin"; // Especifica el layout personalizado para esta vista
}
<h1>@ViewData["Title"]</h1>

<p>En esta página se muestran los comentarios de los usuarios acerca del vinilo.</p>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#ID</th>
            <th scope="col">#ID Vinilo</th>
            <th scope="col">Nombre de Usuario</th>
            <th scope="col">Texto</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdResena</td>
                <td>@item.ViniloId</td>
                <td>@item.Usuario</td>
                <td>
                    <a asp-action="Comment" asp-controller="Resena" asp-route-Id="@item.IdResena" class="btn btn-primary">
                        <i class="fas fa-eye" style="color: #ffffff;"> Ver Comentario</i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="col-6">
    <a asp-action="Index" asp-controller="Resena" type="submit" class="btn btn-outline-primary">Regresar</a>
</div>
